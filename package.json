{
  "name": "@adamjmcgrath/use-auth0",
  "version": "1.0.2",
  "description": "React Hooks library for use with the Auth0 API https://auth0.com",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest",
    "build": "NODE_ENV=production rollup -c",
    "dev": "rollup -c --watch",
    "lint": "eslint src/* test/* *.js examples/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamjmcgrath/use-auth0.git"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@testing-library/react": "^9.3.1",
    "babel-jest": "^24.9.0",
    "eslint": "^6.6.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "rollup": "^1.26.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-delete": "^1.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2"
  },
  "peerDependencies": {
    "react": "16.11.0",
    "react-dom": "16.11.0"
